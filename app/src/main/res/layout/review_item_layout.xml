<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="80dp"
            android:background="@drawable/reviews_avatar"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/review_item_avatar"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.2"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.80"
            android:paddingLeft="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/review_item_view_name"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_weight="0.4"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:text="Mộng Di đại sư"/>
                <TextView
                    android:id="@+id/review_item_view_rating"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.05"
                    android:text="3.5"/>
                <ImageView
                    android:id="@+id/review_item_view_img"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.05"
                    android:src="@drawable/review_star" />
            </LinearLayout>
            <TextView
                android:id="@+id/review_item_view_reviews"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:text="Amazing. The room is good. I am Stephen Chow's close friend. Can you give me a discount?"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>