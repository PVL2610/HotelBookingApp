<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/homescreen_custom_itempopular">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_img_nearbyhotel"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/homescreen_custom_img"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/homescreen_muongthanh">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/home_name_nearbyhotel"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="HAIAN"
                    android:textSize="20sp"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/homescreen_icon_location">
                    </ImageView>
                    <TextView
                        android:id="@+id/home_location_nearbyhotel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="My Khe Beach">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/home_rate_nearbyhotel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4.5">
                    </TextView>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/homescreen_icon_star"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="("
                        android:textSize="12sp"
                        android:gravity="bottom"></TextView>
                    <TextView
                        android:id="@+id/home_SLdanhgia_nearbyhotel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="600"
                        android:textSize="12sp"
                        android:gravity="bottom"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=")"
                        android:textSize="12sp"
                        android:gravity="bottom"></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="$"
                        android:gravity="bottom"
                        android:textColor="#06B3C4"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/home_price_nearbyhotel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="105"
                        android:gravity="bottom"
                        android:textColor="#06B3C4"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="/Day"
                        android:gravity="bottom"
                        android:textColor="#06B3C4"
                        android:textSize="17sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/home_button_book"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/home_custom_button"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/homescreen_icon_archiveadd"></ImageView>
        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>