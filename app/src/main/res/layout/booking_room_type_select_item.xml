<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/booking_bed_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            >

            <TextView
                android:id="@+id/booking_room_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room name"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/booking_room_type_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room description"
                android:textColor="@color/booking_grey"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/booking_room_type_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>