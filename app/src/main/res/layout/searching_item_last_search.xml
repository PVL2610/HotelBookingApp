<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:background="@drawable/searching_last_search_tag_background">


        <TextView
            android:id="@+id/item_tv_last_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag name"
            android:textSize="18sp"
            android:textColor="@color/searching_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/searching_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/searching_close_icon"
            app:layout_constraintBottom_toBottomOf="@+id/item_tv_last_search"
            app:layout_constraintStart_toEndOf="@+id/item_tv_last_search"
            app:layout_constraintTop_toTopOf="@+id/item_tv_last_search" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>